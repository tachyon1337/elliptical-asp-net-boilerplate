@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
}
<section class="outer">
    <grid-row>
        <grid-columns class="default-12">
            <h3>@ViewBag.Title</h3>
            <p>Submit the form below to reset your password.</p>
            @using (Html.Elliptical().BeginForm(Model, new FormAttributes { Scope = "form", Action = "/Account/ResetPassword", CssClass = "form-width" }))
            {
                @Html.Elliptical().HiddenFor(Model,m=>m.Code)
                @Html.Elliptical().EditorFor(Model, m => m.Email, HtmlFormElement.Text)
                @Html.Elliptical().EditorFor(Model, m => m.Password, HtmlFormElement.Password)
                @Html.Elliptical().EditorFor(Model, m => m.ConfirmPassword, HtmlFormElement.Password)
                @Html.Elliptical().Submit("Reset Password")
            }
        </grid-columns>
    </grid-row>
</section>
