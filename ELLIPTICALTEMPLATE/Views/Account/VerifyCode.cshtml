@model VerifyCodeViewModel
@{
    ViewBag.Title = "Enter Verficiation Code";
}
<section class="outer">
    <grid-row>
        <grid-columns class="default-12">
            <h3>@ViewBag.Title</h3>
            <p>
               Enter the verification code that was sent to you to complete your account login.
               Checking "Remember Browser" will automate this future verification process for the current browser.
            </p>
            @using (Html.Elliptical().BeginForm(Model, new FormAttributes { Scope = "form", Action = "/Account/VerifyCode", CssClass = "form-width" }))
            {
                @Html.Elliptical().HiddenFor(Model, m => m.RememberMe)
                @Html.Elliptical().HiddenFor(Model, m => m.Provider)
                @Html.Elliptical().EditorFor(Model,m => m.Code,HtmlFormElement.Text)
                @Html.Elliptical().EditorFor(Model,m=>m.RememberBrowser,HtmlFormElement.Checkbox)
                @Html.Elliptical().Submit("Submit")
            }
        </grid-columns>
    </grid-row>
</section>



