<footer data-role="footer">
    <hr>
    <grid-row>
        <grid-columns class="desktop-6 tablet-6 default-12">
            <h4>Subscribe</h4>
            Sign up to receive important web site updates.
        </grid-columns>
        <grid-columns class="desktop-6 tablet-6 default-12">
            @Html.Elliptical().InputIcon("Subscribe", new ElementAttributes { CssClass = "touch-input-addon subscribe", Placeholder = "Enter Email Address",Id="Subscribe",Controller="subscribe-input" })
        </grid-columns>
    </grid-row>
    <hr>
    <grid-row>
        <grid-columns class="desktop-4 tablet-6 default-12 tablet-flex">
            <flex-box class="column left phone-padding">
                <div class="header-icon">
                    <span class="icon-user-locked"></span>
                    <h3 class="icon-header">Account</h3>
                </div>
                @if (Request.IsAuthenticated)
                {
                    <a href="/Manage/Index">My Profile</a>
                }
                else
                {
                    <a href="/Account/Login">Login</a>
                    <a href="/Account/Register">Sign-Up</a>
                    <a href="/Account/ForgotPassword">Forget Password?</a>
                }
            </flex-box>
        </grid-columns>
        <grid-columns class="desktop-4 tablet-6 default-12 phone-margin tablet-flex">
            <flex-box class="column left phone-border">
                <div class="header-icon">
                    <span class="icon-native-bookmarks"></span>
                    <h3 class="icon-header">Info</h3>
                </div>
                <a href="/Home/Support">Support</a>
                <a href="/Home/Contact">Contact</a>
                <a href="/Home/Privacy-Policy">Privacy Policy</a>
                <a href="/Home/Security-Policy">Security Policy</a>
            </flex-box>
        </grid-columns>
        <grid-columns class="desktop-4 default-12 touch-margin tablet-flex">
            <flex-box class="column left phone-border">
                <div class="header-icon">
                    <span class="icon-tech-net-open"></span>
                    <h3 class="icon-header">Connect</h3>
                </div>
                <div>
                    <span>Follow on Twitter</span> <a class="link-dark">Twitter</a>
                </div>
                <div>
                    <span>Like on Facebook</span> <a class="link-dark">Facebook</a>
                </div>
                <div>
                    <span>Find on Github</span> <a class="link-dark">Github</a>
                </div>
                <div>
                    <span>Email</span> <a class="link-dark">support@my-company.com</a>
                </div>
            </flex-box>
        </grid-columns>
    </grid-row>
    
</footer>
